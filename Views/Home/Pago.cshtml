<div class="container-pago">
  <div class="card-pago-izq">
    <h3>Medio de pago</h3>
  

     <div class="pago-final">
    <span>@ViewBag.pagoFinal</span>
    </div>

    <div class="pago-tiempo">
      <span>Tiempo estimado</span>
      <span>15-20 Minutos</span>
    </div>
  </div>

  <!-- La otra card -->

  <div class="card-pago-der">
    <h3>Costo del producto</h3>
     @foreach(var comida in ViewBag.ListaComida )
    {
    <div class="pago-detalle">
      <span>@comida.Nombre</span>
      <span>$@comida.Precio</span>
    </div>
    }
    
    <div class="pago-total">
      <span>Total</span>
      <span>$@ViewBag.pagoFinal</span>
    </div>
  </div>
</div>


