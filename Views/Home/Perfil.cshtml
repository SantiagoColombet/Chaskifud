@{
    var esLocal = ViewBag.EsLocal;
    var usuario = ViewBag.Usuario;
}

<div class="perfil-container">
    <div class="perfil-puntos-container">
        @if(usuario.Imagen == null || usuario.Imagen == "")
        {
            <img src="../Images/AgregueImagen.png" class="foto-perfil">
        }
        else
        {
            <img src="../Images/@usuario.Imagen" class="foto-perfil">
        }
        
        <div class="perfil-info">
            @if(!esLocal)
            {
                <h3>@usuario.Nombre @usuario.Apellido</h3>
            }
            else
            {
                <h3>@usuario.Nombre</h3>
                <p class="text-muted">Restaurante Registrado</p>
            }
            
            <div class="perfil-acciones">
                <a href='@Url.Action("Logout", "Auth")' class="btn-logout">
                    <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                </a>
                @if(!esLocal)
                {
                    <a href='@Url.Action("PerfilEditar", "Home")' class="btn-editar">
                        <i class="fas fa-edit"></i> Editar Perfil
                    </a>
                }
                else
                {
                    <a href='@Url.Action("ConfRestaurantes", "Home")' class="btn-editar">
                        <i class="fas fa-utensils"></i> Administrar Menú
                    </a>
                }
            </div>
        </div>
    </div>

    <div class="profile-card">
        <div class="field-group">
            <span class="field-label">Email</span>
            <div class="field-wrapper">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                <span class="field-value">@usuario.Email</span>
            </div>
        </div>

        <div class="field-group">
            <span class="field-label">Teléfono</span>
            <div class="field-wrapper">
                <svg class="icon" viewBox="0 0 24 24">
                    <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
                <span class="field-value">@usuario.NumeroTelefono</span>
            </div>
        </div>

        @if(!esLocal)
        {
            <div class="field-group">
                <span class="field-label">Nombre</span>
                <div class="field-wrapper">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                    <span class="field-value">@usuario.Nombre</span>
                </div>
            </div>

            <div class="field-group">
                <span class="field-label">Apellido</span>
                <div class="field-wrapper">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                    </svg>
                    <span class="field-value">@usuario.Apellido</span>
                </div>
            </div>

            <div class="field-group">
                <span class="field-label">Fecha de Nacimiento</span>
                <div class="field-wrapper">
                    <svg class="icon" viewBox="0 0 24 24">
                        <path d="M9 11H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm2-7h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V9h14v11z"/>
                    </svg>
                    <span class="field-value">@usuario.FechaNacimiento.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .perfil-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 1rem;
    }

    .perfil-puntos-container {
        display: flex;
        gap: 2rem;
        align-items: center;
        margin-bottom: 2rem;
    }

    .foto-perfil {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #4CAF50;
    }

    .perfil-info {
        flex-grow: 1;
    }

    .perfil-acciones {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .btn-logout, .btn-editar {
        padding: 0.5rem 1rem;
        border-radius: 5px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-logout {
        background: #f44336;
        color: white;
    }

    .btn-editar {
        background: #2196F3;
        color: white;
    }

    .profile-card {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1.5rem;
    }
</style>